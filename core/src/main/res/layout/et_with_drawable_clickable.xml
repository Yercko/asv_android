<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/EditTextClickable"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_edittext"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/padding_edittext"
    android:paddingRight="@dimen/padding_edittext">

    <ImageView
        android:id="@+id/iv_left"
        android:layout_width="@dimen/size_edittext"
        android:layout_height="@dimen/size_edittext"
        android:paddingTop="@dimen/padding_small"
        android:paddingBottom="@dimen/padding_small"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/info_negro" />
    <EditText
        android:id="@+id/et_content_contact"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/padding_edittext"
        android:layout_weight="1"
        android:focusable="false"
        style="@style/Normal.Exo"
        android:background="@android:color/transparent"
        android:visibility="gone"
        />
    <EditText
        android:id="@+id/et_content"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/padding_edittext"
        style="@style/Normal.Exo"
        android:layout_weight="1"
        android:background="@android:color/transparent" />

    <ImageView
        android:id="@+id/iv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding_small"
        android:paddingTop="@dimen/padding_small"
        />
</LinearLayout>